{
	"name": "vue-farsify",
	"version": "0.0.0",
	"private": true,
	"author": "moein-bld <moein.bolidhe82@gmail.com>",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
		"test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
		"test:unit": "jest",
		"test:unit:dev": "jest --watch",
		"test": "npm run test:unit && npm run test:e2e",
		"build-only": "vite build",
		"type-check": "vue-tsc --build --force",
		"clean": "prettier . --write"
	},
	"dependencies": {
		"vue": "^3.4.3",
		"vue-router": "^4.2.5"
	},
	"devDependencies": {
		"@tsconfig/node18": "^18.2.2",
		"@types/jest": "^29.5.11",
		"@types/node": "^18.19.4",
		"@vitejs/plugin-vue": "^4.6.1",
		"@vue/tsconfig": "^0.5.0",
		"cypress": "^13.6.2",
		"jest": "^29.7.0",
		"npm-run-all2": "^6.1.1",
		"prettier": "3.1.1",
		"rollup": "^4.9.2",
		"start-server-and-test": "^2.0.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.3.0",
		"vite": "^5.0.10",
		"vue-tsc": "^1.8.27"
	}
}
